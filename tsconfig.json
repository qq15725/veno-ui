{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "downlevelIteration": true,
    "resolveJsonModule": true,

    "strict": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
