{
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "pnpm run dev --filter @veno-ui/docs",
    "docs:build": "pnpm run build --filter @veno-ui/docs",
    "docs:publish": "NODE_DEBUG=gh-pages gh-pages -d packages/docs/dist",
    "docs:update": "pnpm run docs:build && pnpm run docs:publish",
    "build:api-generator": "pnpm run build --filter @veno-ui/api-generator",
    "build:markdown": "pnpm run build --filter @veno-ui/markdown",
    "build:vite-plugin-svg": "pnpm run build --filter @veno-ui/vite-plugin-svg",
    "build:vite-plugin-markdown": "pnpm run build --filter @veno-ui/vite-plugin-markdown",
    "build:plugins": "pnpm run build:api-generator && pnpm run build:markdown && pnpm run build:vite-plugin-svg && pnpm run build:vite-plugin-markdown",
    "build:lib": "pnpm run build:lib --filter veno-ui",
    "build:dist": "pnpm run build:dist --filter veno-ui",
    "build": "pnpm run build:lib && pnpm run build:dist"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/node": "^14.11.10",
    "@vitejs/plugin-vue": "^1.10.2",
    "@vitejs/plugin-vue-jsx": "^1.3.5",
    "gh-pages": "^3.2.3",
    "lerna": "^3.22.1",
    "sass": "^1.39.0",
    "sass-loader": "^10.0.0",
    "typescript": "^4.5.4",
    "vite": "^2.8.1",
    "vue": "^3.2.31"
  }
}
