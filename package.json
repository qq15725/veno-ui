{
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "npm run dev -w @veno-ui/docs",
    "docs:build": "npm run build -w @veno-ui/docs",
    "docs:publish": "NODE_DEBUG=gh-pages gh-pages -d packages/docs/dist",
    "docs:update": "npm run docs:build && npm run docs:publish",
    "build:api-generator": "npm run build -w @veno-ui/api-generator",
    "build:markdown": "npm run build -w @veno-ui/markdown",
    "build:vite-plugin-svg": "npm run build -w @veno-ui/vite-plugin-svg",
    "build:vite-plugin-markdown": "npm run build -w @veno-ui/vite-plugin-markdown",
    "build:plugins": "npm run build:api-generator && npm run build:markdown && npm run build:vite-plugin-svg && npm run build:vite-plugin-markdown",
    "build:lib": "npm run build:lib -w veno-ui",
    "build:dist": "npm run build:dist -w veno-ui",
    "build": "npm run build:lib && npm run build:dist"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@types/node": "^14.11.10",
    "@vitejs/plugin-vue": "^1.10.2",
    "@vitejs/plugin-vue-jsx": "^1.3.3",
    "gh-pages": "^3.2.3",
    "lerna": "^3.20.2",
    "sass": "^1.39.0",
    "sass-loader": "^10.0.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.10",
    "vue": "^3.2.26"
  }
}
